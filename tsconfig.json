{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "baseUrl": "./", // 프로젝트 루트를 기준으로 절대 경로 설정
    "paths": {
      "src/*": ["src/*"] // src 경로를 절대 경로로 매핑
    },
    "typeRoots": ["./node_modules/@types"],
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}