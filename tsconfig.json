{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react", // Emotion과 통합
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
